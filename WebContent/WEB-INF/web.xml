<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Product Web App</display-name>
 
   <welcome-file-list>
         <welcome-file>Productform.html</welcome-file>
          <welcome-file>ProductForm.htm</welcome-file>
           <welcome-file>Produc.html</welcome-file>
       </welcome-file-list>
    <servlet>
       <servlet-name>ProductServlet</servlet-name>
       <servlet-class>com.niit.productapp.controllers.ProductController</servlet-class>    
    </servlet>
        
   <servlet-mapping>
       <servlet-name>ProductServlet</servlet-name>
       <url-pattern>/prod.do</url-pattern>
       <url-pattern>/prod.view</url-pattern>
   </servlet-mapping> 
</web-app>